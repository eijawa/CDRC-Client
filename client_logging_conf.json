{
  "version": 1,
  "formatters": {
    "clientFormatter": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "formatter": "clientFormatter",
      "filename": "logs/client.log",
      "backupCount": 3,
      "utc": true,
      "when": "D",
      "interval": 3,
      "encoding": "UTF-8"
    }
  },
  "loggers": {
    "clientLogger": {
      "level": "DEBUG",
      "handlers": ["file"],
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["file"]
  }
}
